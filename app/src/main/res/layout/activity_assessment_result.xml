<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/list_color_6"
    tools:context=".AssessmentResult">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Result"
            android:fontFamily="@font/imprima"
            android:textSize="28dp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentLeft="true"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="onCrossClick"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/card"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/result"
                android:textSize="24dp"
                android:text="Suspected!"
                android:fontFamily="@font/imprima"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/result_advice"
                android:textSize="18dp"
                android:text="@string/isolate"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/imprima"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:id="@+id/last_text"
                android:text="*This result is on the basis of your response"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/imprima"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/check_again"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:onClick="checkAgain"
        app:cardBackgroundColor="@color/red"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Check Again"
            android:textStyle="bold"
            android:drawablePadding="20dp"
            android:textAlignment="center"
            android:fontFamily="@font/imprima"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#fff"
            android:drawableTint="#fff"
            android:drawableLeft="@drawable/ic_baseline_replay_24"

            />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/set_reminder"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="#12B6A7"
        android:onClick="setReminder"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Set Hand Wash Reminder"
                android:drawablePadding="20dp"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textStyle="bold"
                android:fontFamily="@font/imprima"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_washing_hands"


                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>